{
  "name": "collector",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "tsc",
    "start": "tsx src/main.ts",
    "dev": "tsx watch src/main.ts",
    "lint": "biome check . && eslint .",
    "lint:fix": "biome check --write . && eslint . --fix",
    "lint:biome": "biome check .",
    "lint:eslint": "eslint .",
    "format": "biome format --write .",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "deps:check": "npx npm-check-updates",
    "deps:update:patch": "npx npm-check-updates -u --target patch",
    "deps:update:minor": "npx npm-check-updates -u --target minor",
    "deps:update:major": "npx npm-check-updates -u --target major",
    "deps:audit": "npm audit",
    "deps:audit:fix": "npm audit fix"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "ioredis": "^5.8.2",
    "pino": "^10.1.0",
    "prom-client": "^15.1.3",
    "tsx": "^4.21.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@eslint/js": "^9.39.2",
    "@types/eslint": "^9.6.1",
    "@types/node": "^24.10.4",
    "@typescript-eslint/eslint-plugin": "^8.50.1",
    "@typescript-eslint/parser": "^8.50.1",
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "jiti": "^2.6.1",
    "lint-staged": "^16.2.7",
    "pino-pretty": "^13.1.3",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.50.1",
    "vitest": "^4.0.16"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "biome check --write",
      "biome format --write",
      "eslint --fix"
    ],
    "tests/**/*.ts": [
      "biome check --write",
      "biome format --write",
      "eslint --fix"
    ],
    "src/**/*.{json,md}": [
      "biome format --write"
    ]
  },
  "overrides": {
    "glob": ">=11.1.0"
  }
}
