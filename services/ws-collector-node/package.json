{
  "name": "ws-collector-node",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "tsc",
    "start": "tsx src/main.ts",
    "dev": "tsx watch src/main.ts",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "deps:check": "npx npm-check-updates",
    "deps:update:patch": "npx npm-check-updates -u --target patch",
    "deps:update:minor": "npx npm-check-updates -u --target minor",
    "deps:update:major": "npx npm-check-updates -u --target latest",
    "deps:audit": "npm audit",
    "deps:audit:fix": "npm audit fix"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "ioredis": "^5.8.2",
    "tsx": "^4.21.0",
    "winston": "^3.19.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@types/node": "^24.10.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "typescript": "^5.9.3",
    "vitest": "^4.0.14"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "biome check --write",
      "biome format --write"
    ],
    "src/**/*.{json,md}": [
      "biome format --write"
    ]
  },
  "overrides": {
    "glob": ">=11.1.0"
  }
}
